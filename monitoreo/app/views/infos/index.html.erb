<h1>Listado de Mediciones de Recursos</h1>
<hr>
<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Nombre Servidor</th>
        <th>Carga de CPU</th>
        <th>Espacio de Disco</th>
      </tr> 
    </thead>
    <tbody>
      <% @infos.each do |info| %>
        <tr>
          <td><%= Time.at(info.created_at).utc.strftime("%d/%m/%Y %H:%M") %></td>
          <td><%= info.server.name %></td>
          <td><%= info.cpucharge %></td>
          <td><%= info.diskspace %></td>
        </tr>
      <% end %> 
    </tbody>
  </table>
</div>
<%= will_paginate @infos %>
