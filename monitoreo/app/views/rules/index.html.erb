<h1>Listado de Reglas</h1>
<hr>
<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Prioridad</th>
        <th>Riesgo CPU</th>
        <th>Riesgo Espacio</th>
        <th>Riesgo Tiempo</th>
        <th colspan="3"></th>
      </tr> 
    </thead>
    <tbody>
      <% @rules.each do |rule| %>
        <tr>
          <td><%= rule.name %></td>
          <td><%= rule.priority %></td>
          <td><%= (rule.cpuchargeexceed).to_s + ' %' %></td>
          <td><%= (rule.diskspaceexceed).to_s + ' Gbs' %></td>
          <td><%= Time.at(rule.timeexceed).utc.strftime("%H:%M:%S") %></td>
          <td><%= link_to 'Detalle', rule_path(rule) %></td>
          <td><%= link_to 'Editar', edit_rule_path(rule) %></td>
          <td><%= link_to 'Borrar', rule_path(rule), method: :delete, data: { confirm: 'Estas Seguro?' } %></td>      
        </tr>
      <% end %> 
    </tbody>
  </table>
</div>
<hr>
<div>
  <%= link_to 'Nueva Regla', new_rule_path %>
</div>
<br>
<div>
  <%= link_to 'Volver a Principal', root_url %>
</div>
<hr>