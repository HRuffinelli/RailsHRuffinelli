<h1>Listado de Usuarios</h1>
<hr>
<div class="table-responsive">
  <table class="table table-condensed">
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Alias</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr> 
    <% @user.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.alias %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Borrar', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>      
      </tr>
    <% end %> 
  </table>
</div>
<hr>
<div>
  <%= link_to 'Nuevo Usuario', new_user_path %>
</div>
<br>
<div>
  <%= link_to 'Volver a Principal', root_url %>
</div>
<hr>